<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sda_frontend.LoginPage">

    <!-- Top Image -->
    <ImageView fx:id="centerImage" fitWidth="400" fitHeight="200" preserveRatio="true"/>

    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
        <!-- Username Input -->
        <TextField fx:id="usernameInput"
                   prefWidth="400"
                   promptText="Enter Username"
                   style="-fx-background-color: white;
                         -fx-border-color: #ededed;
                         -fx-border-width: 3;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;
                         -fx-padding: 12;
                         -fx-font-size: 13;"/>

        <!-- Password Input -->
        <PasswordField fx:id="passwordInput"
                       prefWidth="400"
                       promptText="Enter Password"
                       style="-fx-background-color: white;
                             -fx-border-color: #ededed;
                             -fx-border-width: 3;
                             -fx-border-radius: 8;
                             -fx-background-radius: 8;
                             -fx-padding: 12;
                             -fx-font-size: 13;"/>

        <!-- Login Button -->
        <Button fx:id="loginButton"
                text="Login"
                prefWidth="250"
                style="-fx-background-color: black;
                       -fx-text-fill: white;
                       -fx-font-size: 16;
                       -fx-font-weight: bold;
                       -fx-padding: 10 30;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
                onAction="#onLoginClick">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </Button>

        <!-- Signup Text and Button -->
        <HBox alignment="CENTER" spacing="5">
            <Text text="Don't have an account?" style="-fx-font-size: 13;"/>
            <Button fx:id="signupButton"
                    text="Sign Up"
                    onAction="#onSignupClick"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #2196F3;
                           -fx-font-size: 13;
                           -fx-padding: 0;
                           -fx-cursor: hand;
                           -fx-underline: true;"/>
        </HBox>
    </VBox>
</VBox>