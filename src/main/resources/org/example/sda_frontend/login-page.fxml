<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" style="-fx-background-color: white;" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sda_frontend.LoginPage">

    <!-- Top Image -->
    <ImageView fx:id="centerImage" fitWidth="400" fitHeight="200" preserveRatio="true"/>
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: -30 20 0 20; -fx-max-width:500;">
        <Label fx:id="errorLabel"
               text="Train on real-life Crypto Data, become anew."
               style="-fx-font-size: 16; -fx-text-fill: #8f8f8f;"/>
    </VBox>
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 0 20 20 20; -fx-max-width:300;">
        <!-- Username Input -->
        <TextField fx:id="usernameInput"
                   prefWidth="400"
                   promptText="Enter Email"
                   style="-fx-background-color: white;
                         -fx-border-color: #ededed;
                         -fx-border-width: 3;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;
                         -fx-padding: 12;
                         -fx-font-size: 13;"/>

        <!-- Password Input -->
        <PasswordField fx:id="passwordInput"
                       prefWidth="400"
                       promptText="Enter Password"
                       style="-fx-background-color: white;
                             -fx-border-color: #ededed;
                             -fx-border-width: 3;
                             -fx-border-radius: 8;
                             -fx-background-radius: 8;
                             -fx-padding: 12;
                             -fx-font-size: 13;"/>

        <!-- Login Button with Progress Indicator -->
        <StackPane>
            <Button fx:id="loginButton"
                    text="Login"
                    prefWidth="300"
                    style="-fx-background-color: black;
                           -fx-text-fill: white;
                           -fx-font-size: 16;
                           -fx-font-weight: bold;
                           -fx-padding: 10 30;
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
                    onAction="#onLoginClick">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
            <ProgressIndicator fx:id="loginProgress"
                               visible="false"
                               style="-fx-progress-color: white;"
                               maxHeight="20" maxWidth="20"/>
        </StackPane>

        <!-- Signup Text and Button -->
        <HBox alignment="CENTER" spacing="5">
            <Text text="Don't have an account?" style="-fx-font-size: 13;"/>
            <Button fx:id="signupButton"
                    text="Sign Up"
                    onAction="#onSignupClick"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #2196F3;
                           -fx-font-size: 13;
                           -fx-padding: 0;
                           -fx-cursor: hand;
                           -fx-underline: true;"/>
        </HBox>
    </VBox>
</VBox>